<UserControl x:Class="PLINQSearching.ResultsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             Name="MyToolWindow">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Width="400" Height="400"><Run Text="Results"/></TextBlock>
        <DataGrid x:Name="dataGrid" ItemsSource="{Binding}" SelectionChanged="dataGrid_SelectionChanged" SelectionMode="Single" SelectionUnit="FullRow" HeadersVisibility="None" Margin="0,36,0,133" HorizontalAlignment="Left" VerticalAlignment="Top">
            <DataGrid.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlDarkDarkColorKey}}"/>
            </DataGrid.Background>
        </DataGrid>
    </Grid>
</UserControl>

    