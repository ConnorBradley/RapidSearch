<UserControl x:Class="PLINQSearching.PLINQSearchWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             Name="MyToolWindow" HorizontalAlignment="Stretch" Loaded="MyToolWindow_Loaded"
            VerticalAlignment="Stretch"
             >

    <Canvas Height="69" VerticalAlignment="Top">

        <TextBlock HorizontalAlignment="Center">Rapid Search Window</TextBlock>
        <TextBox x:Name="txtSearchTerm" Height="23" Width="276" Canvas.Top="21" />

        <Button x:Name="btnRegEx" Content="RegEx" Width="51" Height="22" Click="RegExbutton_Click" Canvas.Left="174" Canvas.Top="45"/>
        <Button Content="Search" Click="btnSearch_Click" Width="51" Height="22" x:Name="btnSearch" Canvas.Left="225" Canvas.Top="45"/>
    </Canvas>
</UserControl>
